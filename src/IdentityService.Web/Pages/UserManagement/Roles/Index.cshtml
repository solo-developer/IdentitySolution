@page
@model IdentityService.Web.Pages.UserManagement.Roles.IndexModel
@{
    ViewData["Title"] = "Role Management";
}

<div class="page-header">
    <h1 class="page-title">Roles & Modules</h1>
</div>

<div class="card">
    <div class="form-group">
        <label class="form-label">Select Service Module</label>
        <select class="form-control" id="moduleSelector" onchange="window.location.href='?module=' + this.value" 
               @(Model.IsModuleReadOnly ? "disabled" : "")>
            <option value="">-- Choose a Module --</option>
            @foreach (var mod in Model.Modules)
            {
                <option value="@mod" selected="@(Model.Module == mod)">@mod</option>
            }
        </select>
        @if (Model.IsModuleReadOnly && !string.IsNullOrEmpty(Model.Module))
        {
            <div style="margin-top:0.5rem; font-size:0.875rem; color:var(--text-muted);">
                ðŸ”’ Module selection is locked by referrer.
            </div>
        }
    </div>
</div>

@if (!string.IsNullOrEmpty(Model.Module))
{
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="card" style="border-left: 4px solid var(--danger); padding: 1rem;">
            <div style="color: var(--danger); font-weight: 500;">Please fix the errors below:</div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    }

    <div class="card">
        <h3 style="margin-top:0; margin-bottom:1rem;">Add New Role for @Model.Module</h3>
        <form method="post" asp-page-handler="Create">
            <input type="hidden" asp-for="CreateRoleInput.Module" value="@Model.Module" />
            <div style="display: flex; gap: 1rem; align-items: flex-end;">
                <div class="form-group" style="flex: 1; margin-bottom:0;">
                    <label class="form-label">Role Name</label>
                    <input asp-for="CreateRoleInput.Name" class="form-control" placeholder="e.g. SalesManager" required />
                </div>
                <div class="form-group" style="flex: 2; margin-bottom:0;">
                    <label class="form-label">Description</label>
                    <input asp-for="CreateRoleInput.Description" class="form-control" placeholder="Description of the role..." />
                </div>
                <button type="submit" class="btn btn-primary">Create Role</button>
            </div>
        </form>
    </div>

    <div class="card">
        <div class="table-container">
            <table class="table">
                <thead>
                    <tr>
                        <th>Role Name</th>
                        <th>Description</th>
                        <th>Permissions</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Roles.Count == 0)
                    {
                        <tr>
                            <td colspan="4" style="text-align:center; color:var(--text-muted);">No roles found for this module.</td>
                        </tr>
                    }
                    @foreach (var role in Model.Roles)
                    {
                        <tr>
                            <td style="font-weight: 500;">@role.Name</td>
                            <td>@role.Description</td>
                            <td>
                                <span class="badge badge-success">@role.Permissions.Count assigned</span>
                            </td>
                            <td>
                                <a href="/RolePermissionMapping?module=@Model.Module&roleId=@role.Id" class="btn btn-secondary btn-sm">Manage Permissions</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="card" style="text-align: center; padding: 3rem;">
        <div style="font-size: 3rem; margin-bottom: 1rem;">ðŸ‘†</div>
        <h3 style="margin: 0;">Please select a module to manage roles</h3>
        <p style="color: var(--text-muted);">Permissions and Roles are scoped to specific service modules.</p>
    </div>
}
