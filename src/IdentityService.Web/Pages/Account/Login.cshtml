@page
@model IdentityService.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "_AuthLayout";
}

<!-- Left Brand Panel -->
<div class="auth-brand">
    <div class="brand-content">
        <div class="brand-logo">
            <i class="bi bi-shield-lock-fill"></i>
        </div>
        <h1 class="brand-title">Identity Admin</h1>
        <p class="brand-subtitle">
            Secure, centralized identity and access management for your entire organization.
        </p>
        <div class="brand-features">
            <div class="brand-feature">
                <i class="bi bi-check2"></i>
                <span>Role-based access control</span>
            </div>
            <div class="brand-feature">
                <i class="bi bi-check2"></i>
                <span>Multi-module permission management</span>
            </div>
            <div class="brand-feature">
                <i class="bi bi-check2"></i>
                <span>Secure authentication with OpenIddict</span>
            </div>
        </div>
    </div>
</div>

<!-- Right Form Panel -->
<div class="auth-form-panel">
    <div class="auth-form-container">
        <div class="auth-header">
            <h1>Sign in</h1>
            <p>Welcome back! Please enter your details.</p>
        </div>
        
        <form method="post">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-errors">
                    <div asp-validation-summary="All"></div>
                </div>
            }
            
            <div class="mb-3">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" placeholder="Enter your email" />
            </div>
            
            <div class="mb-3">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" type="password" class="form-control" placeholder="Enter your password" />
            </div>
            
            <div class="form-options">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>
                <a href="#">Forgot password?</a>
            </div>
            
            <button type="submit" class="btn-login">
                Sign in
            </button>
        </form>
        
        <div class="divider">
            <span>or continue with</span>
        </div>
        
        <div class="social-buttons">
            <button type="button" class="btn-social">
                <svg width="18" height="18" viewBox="0 0 24 24"><path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/><path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/><path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/><path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/></svg>
                Google
            </button>
            <button type="button" class="btn-social">
                <svg width="18" height="18" viewBox="0 0 23 23"><path fill="#f35325" d="M1 1h10v10H1z"/><path fill="#81bc06" d="M12 1h10v10H12z"/><path fill="#05a6f0" d="M1 12h10v10H1z"/><path fill="#ffba08" d="M12 12h10v10H12z"/></svg>
                Microsoft
            </button>
        </div>
    </div>
</div>
