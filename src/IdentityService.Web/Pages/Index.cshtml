@page
@model IdentityService.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4">User Management Dashboard</h1>
            <p class="text-muted">Core Identity & Access Management System</p>
        </div>
    </div>

    <div class="row g-4">
        <!-- Total Users Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Total Users</h6>
                            <h2 class="mb-0">@Model.TotalUsers</h2>
                        </div>
                        <div class="bg-primary bg-opacity-10 p-3 rounded">
                            <i class="bi bi-people fs-2 text-primary"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-success">
                            <i class="bi bi-arrow-up"></i> @Model.ActiveUsers active
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Roles Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Total Roles</h6>
                            <h2 class="mb-0">@Model.TotalRoles</h2>
                        </div>
                        <div class="bg-success bg-opacity-10 p-3 rounded">
                            <i class="bi bi-shield-check fs-2 text-success"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            Across @Model.TotalModules modules
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Total Permissions Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Permissions</h6>
                            <h2 class="mb-0">@Model.TotalPermissions</h2>
                        </div>
                        <div class="bg-warning bg-opacity-10 p-3 rounded">
                            <i class="bi bi-key fs-2 text-warning"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            System-wide access controls
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Inactive Users Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-2">Inactive Users</h6>
                            <h2 class="mb-0">@Model.InactiveUsers</h2>
                        </div>
                        <div class="bg-danger bg-opacity-10 p-3 rounded">
                            <i class="bi bi-person-x fs-2 text-danger"></i>
                        </div>
                    </div>
                    <div class="mt-3">
                        <small class="text-muted">
                            Disabled accounts
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 g-4">
        <!-- Quick Actions -->
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-3">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="/UserManagement/Users/Create" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus me-2"></i>Add New User
                        </a>
                        <a href="/UserManagement/Roles" class="btn btn-outline-success">
                            <i class="bi bi-shield-plus me-2"></i>Manage Roles
                        </a>
                        <a href="/UserManagement/Users" class="btn btn-outline-info">
                            <i class="bi bi-people me-2"></i>View All Users
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Roles by Module -->
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-header bg-white border-0 pt-3">
                    <h5 class="mb-0">Roles by Module</h5>
                </div>
                <div class="card-body">
                    @if (Model.RolesByModule.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Module</th>
                                        <th>Roles</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var module in Model.RolesByModule)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@module.Key</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-primary">@module.Value roles</span>
                                            </td>
                                            <td>
                                                <a href="/UserManagement/Roles?module=@module.Key" class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i> View
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-inbox fs-1 text-muted"></i>
                            <p class="text-muted mt-2">No roles configured yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 pt-3">
                    <h5 class="mb-0">System Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Service Name:</dt>
                                <dd class="col-sm-8">Identity Service</dd>
                                
                                <dt class="col-sm-4">Version:</dt>
                                <dd class="col-sm-8">1.0.0</dd>
                                
                                <dt class="col-sm-4">Environment:</dt>
                                <dd class="col-sm-8"><span class="badge bg-info">@Model.Environment</span></dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Event Bus:</dt>
                                <dd class="col-sm-8">RabbitMQ (MassTransit)</dd>
                                
                                <dt class="col-sm-4">Auth Provider:</dt>
                                <dd class="col-sm-8">OpenIddict</dd>
                                
                                <dt class="col-sm-4">API Docs:</dt>
                                <dd class="col-sm-8"><a href="/swagger" target="_blank">Swagger UI</a></dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
}
