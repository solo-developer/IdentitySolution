@model IdentityService.Web.ViewModels.RolePermissionMappingViewModel
@{
    ViewData["Title"] = "Role Permission Mapping";
    
    // Helper to count total permissions for summary
    int CountPermissions(IEnumerable<IdentityService.Web.ViewModels.PermissionTreeNode> nodes)
    {
        int count = 0;
        foreach (var node in nodes)
        {
            count++;
            count += CountPermissions(node.Children);
        }
        return count;
    }

    int CountAssigned(IEnumerable<IdentityService.Web.ViewModels.PermissionTreeNode> nodes)
    {
        int count = 0;
        foreach (var node in nodes)
        {
            if (node.IsAssigned) count++;
            count += CountAssigned(node.Children);
        }
        return count;
    }

    var totalPermissions = CountPermissions(Model.PermissionTree);
    var assignedCount = CountAssigned(Model.PermissionTree);
}

@functions {
    public async Task RenderPermissionTree(IEnumerable<IdentityService.Web.ViewModels.PermissionTreeNode> nodes, int level = 0)
    {
        @foreach (var node in nodes)
        {
            <tr>
                <td class="text-center">
                    <input type="checkbox" 
                           name="selectedPermissions" 
                           value="@node.Id"
                           class="form-check-input permission-checkbox"
                           @(node.IsAssigned ? "checked" : "") />
                </td>
                <td>
                    <div style="padding-left: @(level * 25)px;" class="d-flex align-items-center">
                        @if (level > 0)
                        {
                            <i class="bi bi-arrow-return-right text-muted me-2 small"></i>
                        }
                        <code>@node.Name</code>
                    </div>
                </td>
                <td class="text-muted text-sm">
                    @(string.IsNullOrEmpty(node.Description) ? "â€”" : node.Description)
                </td>
            </tr>
            @if (node.Children.Any())
            {
                await RenderPermissionTree(node.Children, level + 1);
            }
        }
    }
}

<div class="page-header">
    <div>
        <h1 class="page-title">Role Permission Mapping</h1>
        <p class="page-description">Assign permissions to roles</p>
    </div>
</div>

<div class="row g-4">
    <!-- Role Selector -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Select Role</h5>
            </div>
            <div class="card-body">
                <form method="get" asp-action="Index" id="roleForm">
                    <div class="form-group mb-3">
                        <label class="form-label">Module</label>
                        <select name="module" id="moduleSelect" class="form-select" onchange="this.form.submit()">
                            <option value="">Select module</option>
                            @foreach (var module in Model.AvailableModules)
                            {
                                <option value="@module" selected="@(module == Model.SelectedModule)">@module</option>
                            }
                        </select>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.SelectedModule))
                    {
                        <div class="form-group mb-0">
                            <label class="form-label">Role</label>
                            <select name="roleId" class="form-select" onchange="this.form.submit()">
                                <option value="">Select role</option>
                                @foreach (var role in Model.RolesInModule)
                                {
                                    <option value="@role.Id" selected="@(role.Id == Model.SelectedRoleId)">@role.Name</option>
                                }
                            </select>
                        </div>
                    }
                </form>
            </div>
        </div>
        
        @if (!string.IsNullOrEmpty(Model.SelectedRoleId))
        {
            <div class="card mt-4">
                <div class="card-header">
                    <h5 class="card-title">Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Role</span>
                        <span class="font-medium">@Model.SelectedRoleName</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Module</span>
                        <span class="badge badge-gray">@Model.SelectedModule</span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span class="text-muted">Assigned</span>
                        <span class="font-semibold" id="assignedCount">@assignedCount</span>
                    </div>
                </div>
            </div>
        }
    </div>
    
    <!-- Permissions -->
    <div class="col-lg-8">
        @if (string.IsNullOrEmpty(Model.SelectedRoleId))
        {
            <div class="card">
                <div class="empty-state">
                    <i class="bi bi-diagram-3 empty-state-icon"></i>
                    <h5 class="empty-state-title">Select a Role</h5>
                    <p class="empty-state-text">Choose a module and role from the left panel to manage its permissions.</p>
                </div>
            </div>
        }
        else
        {
            <form method="post" asp-action="Assign">
                <input type="hidden" name="roleId" value="@Model.SelectedRoleId" />
                <input type="hidden" name="module" value="@Model.SelectedModule" />
                
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Permissions for @Model.SelectedRoleName</h5>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-sm btn-secondary" onclick="selectAll(true)">Select All</button>
                            <button type="button" class="btn btn-sm btn-secondary" onclick="selectAll(false)">Clear All</button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        @if (Model.PermissionTree.Any())
                        {
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th style="width: 50px;"></th>
                                        <th>Permission</th>
                                        <th>Description</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{await RenderPermissionTree(Model.PermissionTree);}
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="empty-state">
                                <i class="bi bi-key empty-state-icon"></i>
                                <h5 class="empty-state-title">No permissions available</h5>
                                <p class="empty-state-text">Create permissions for @Model.SelectedModule first.</p>
                                <a asp-controller="Permissions" asp-action="Index" asp-route-module="@Model.SelectedModule" class="btn btn-secondary">
                                    Manage Permissions
                                </a>
                            </div>
                        }
                    </div>
                    @if (Model.PermissionTree.Any())
                    {
                        <div class="card-footer d-flex justify-content-end">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-check"></i> Save Changes
                            </button>
                        </div>
                    }
                </div>
            </form>
        }
    </div>
</div>

@section Scripts {
    <script>
        function selectAll(checked) {
            document.querySelectorAll('.permission-checkbox').forEach(cb => {
                cb.checked = checked;
            });
            updateCount();
        }
        
        function updateCount() {
            const count = document.querySelectorAll('.permission-checkbox:checked').length;
            const el = document.getElementById('assignedCount');
            if (el) el.textContent = count;
        }
        
        document.querySelectorAll('.permission-checkbox').forEach(cb => {
            cb.addEventListener('change', updateCount);
        });
    </script>
}
