@model IdentityService.Web.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Dashboard</h1>
        <p class="page-description">System overview and quick access to administration tasks</p>
    </div>
</div>

<!-- Stats Grid -->
<div class="stat-grid" style="grid-template-columns: repeat(4, 1fr);">
    <div class="stat-card">
        <div class="stat-label">Total Users</div>
        <div class="stat-value">@Model.TotalUsers</div>
        <div class="stat-meta">
            <span style="color: var(--success);">@Model.ActiveUsers active</span> Â· 
            <span class="text-muted">@Model.InactiveUsers inactive</span>
        </div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Roles</div>
        <div class="stat-value">@Model.TotalRoles</div>
        <div class="stat-meta">Across @Model.TotalModules modules</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Permissions</div>
        <div class="stat-value">@Model.TotalPermissions</div>
        <div class="stat-meta">Active permissions</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Modules</div>
        <div class="stat-value">@Model.TotalModules</div>
        <div class="stat-meta">Registered services</div>
    </div>
</div>

<div class="row g-4">
    <!-- Quick Actions -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Quick Actions</h5>
            </div>
            <div class="card-body p-0">
                <a asp-controller="Users" asp-action="Create" class="d-flex align-items-center gap-3 p-3 border-bottom text-decoration-none" style="color: inherit;">
                    <i class="bi bi-person-plus text-primary" style="font-size: 1.25rem;"></i>
                    <div>
                        <div class="font-medium">Create User</div>
                        <div class="text-muted text-xs">Add a new user account</div>
                    </div>
                </a>
                <a asp-controller="Roles" asp-action="Index" class="d-flex align-items-center gap-3 p-3 border-bottom text-decoration-none" style="color: inherit;">
                    <i class="bi bi-person-badge text-primary" style="font-size: 1.25rem;"></i>
                    <div>
                        <div class="font-medium">Manage Roles</div>
                        <div class="text-muted text-xs">Configure role assignments</div>
                    </div>
                </a>
                <a asp-controller="Permissions" asp-action="Index" class="d-flex align-items-center gap-3 p-3 border-bottom text-decoration-none" style="color: inherit;">
                    <i class="bi bi-key text-primary" style="font-size: 1.25rem;"></i>
                    <div>
                        <div class="font-medium">Permissions</div>
                        <div class="text-muted text-xs">Define access controls</div>
                    </div>
                </a>
                <a asp-controller="Ldap" asp-action="Index" class="d-flex align-items-center gap-3 p-3 text-decoration-none" style="color: inherit;">
                    <i class="bi bi-diagram-2 text-primary" style="font-size: 1.25rem;"></i>
                    <div>
                        <div class="font-medium">LDAP Sync</div>
                        <div class="text-muted text-xs">Import from Active Directory</div>
                    </div>
                </a>
            </div>
        </div>
    </div>
    
    <!-- Roles by Module -->
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Roles by Module</h5>
                <a asp-controller="Roles" asp-action="Index" class="btn btn-sm btn-secondary">View All</a>
            </div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>Module</th>
                            <th style="width: 100px;">Roles</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var module in Model.RolesByModule.OrderByDescending(m => m.Value))
                        {
                            <tr>
                                <td>
                                    <span class="font-medium">@module.Key</span>
                                </td>
                                <td>@module.Value</td>
                                <td>
                                    <a asp-controller="Roles" asp-action="Index" asp-route-module="@module.Key" 
                                       class="btn btn-sm btn-ghost" data-bs-toggle="tooltip" title="View roles">
                                        <i class="bi bi-person-badge"></i>
                                    </a>
                                    <a asp-controller="Permissions" asp-action="Index" asp-route-module="@module.Key" 
                                       class="btn btn-sm btn-ghost" data-bs-toggle="tooltip" title="View permissions">
                                        <i class="bi bi-key"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                        @if (!Model.RolesByModule.Any())
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted py-4">No modules found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


