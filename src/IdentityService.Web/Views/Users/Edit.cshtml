@model IdentityService.Web.ViewModels.EditUserViewModel
@{
    ViewData["Title"] = "Edit User";
    var allRoles = Model.GroupedRoles.Values.SelectMany(r => r).ToList();
}

<div class="page-header">
    <div>
        <div class="breadcrumb">
            <a asp-action="Index">Users</a> / Edit
        </div>
        <h1 class="page-title">@Model.FullName</h1>
        <p class="page-description">@Model.Email</p>
    </div>
</div>

<div class="row g-4">
    <!-- User Details -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">User Details</h5>
            </div>
            <div class="card-body">
                <div class="mb-4">
                    <div class="text-muted text-xs mb-1">Full Name</div>
                    <div class="font-medium">@Model.FullName</div>
                </div>
                <div class="mb-4">
                    <div class="text-muted text-xs mb-1">Username</div>
                    <code>@Model.UserName</code>
                </div>
                <div class="mb-4">
                    <div class="text-muted text-xs mb-1">Email</div>
                    <div>@Model.Email</div>
                </div>
                <div>
                    <div class="text-muted text-xs mb-1">User ID</div>
                    <code class="text-xs">@Model.Id</code>
                </div>
            </div>
        </div>
        
        <!-- Summary -->
        <div class="card mt-4">
            <div class="card-header">
                <h5 class="card-title">Role Summary</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span class="text-muted">Assigned Roles</span>
                    <span class="font-semibold" id="assignedCount">@Model.SelectedRoles.Count</span>
                </div>
                <div class="d-flex justify-content-between">
                    <span class="text-muted">Available Roles</span>
                    <span>@(allRoles.Count - Model.SelectedRoles.Count)</span>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Role Assignments -->
    <div class="col-lg-8">
        <form method="post" asp-action="Edit" id="roleForm">
            <input type="hidden" asp-for="Id" />
            
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Role Assignments</h5>
                    <div class="d-flex gap-2">
                        <select id="moduleFilter" class="form-select form-control-sm" style="width: 180px;">
                            <option value="">All Modules</option>
                            @foreach (var module in Model.GroupedRoles.Keys.OrderBy(m => m))
                            {
                                <option value="@module">@module</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="card-body p-0">
                    @if (allRoles.Any())
                    {
                        <table class="table mb-0" id="rolesTable">
                            <thead>
                                <tr>
                                    <th style="width: 50px;"></th>
                                    <th>Role</th>
                                    <th>Module</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in allRoles)
                                {
                                    var isAssigned = Model.SelectedRoles.Contains(role.Name);
                                    <tr data-module="@role.Module">
                                        <td class="text-center">
                                            <input type="checkbox" 
                                                   name="SelectedRoles"
                                                   value="@role.Name"
                                                   class="form-check-input role-checkbox"
                                                   @(isAssigned ? "checked" : "") />
                                        </td>
                                        <td>
                                            <span class="font-medium">@role.Name</span>
                                        </td>
                                        <td>
                                            <span class="badge badge-gray">@role.Module</span>
                                        </td>
                                        <td class="text-muted text-sm">
                                            @(string.IsNullOrEmpty(role.Description) ? "â€”" : role.Description)
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="bi bi-person-badge empty-state-icon"></i>
                            <h5 class="empty-state-title">No roles available</h5>
                            <p class="empty-state-text">Create roles first to assign them to users.</p>
                            <a asp-controller="Roles" asp-action="Index" class="btn btn-secondary">
                                Manage Roles
                            </a>
                        </div>
                    }
                </div>
                @if (allRoles.Any())
                {
                    <div class="card-footer d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Save Changes
                        </button>
                    </div>
                }
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Module filter
        document.getElementById('moduleFilter').addEventListener('change', function() {
            const module = this.value;
            const rows = document.querySelectorAll('#rolesTable tbody tr');
            
            rows.forEach(row => {
                if (!module || row.dataset.module === module) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });
        
        // Update assigned count
        function updateCount() {
            const count = document.querySelectorAll('.role-checkbox:checked').length;
            document.getElementById('assignedCount').textContent = count;
        }
        
        document.querySelectorAll('.role-checkbox').forEach(cb => {
            cb.addEventListener('change', updateCount);
        });
    </script>
}
