@model IdentityService.Web.ViewModels.UserIndexViewModel
@{
    ViewData["Title"] = "Users";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Users</h1>
        <p class="page-description">Manage user accounts and role assignments</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus"></i> Add User
        </a>
    </div>
</div>

<!-- Stats -->
<div class="stat-grid" style="grid-template-columns: repeat(3, 1fr);">
    <div class="stat-card">
        <div class="stat-label">Total Users</div>
        <div class="stat-value">@Model.Users.Count</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">With Roles</div>
        <div class="stat-value">@Model.Users.Count(u => u.Roles.Any())</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">No Roles Assigned</div>
        <div class="stat-value">@Model.Users.Count(u => !u.Roles.Any())</div>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Users.Any())
        {
            <table class="table mb-0" id="usersTable">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>
                                <span class="font-medium">@user.FullName</span>
                            </td>
                            <td>
                                <code>@user.UserName</code>
                            </td>
                            <td class="text-muted">@user.Email</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    @foreach (var role in user.Roles.Take(3))
                                    {
                                        <span class="badge badge-primary me-1">@role</span>
                                    }
                                    @if (user.Roles.Count > 3)
                                    {
                                        <span class="badge badge-gray">+@(user.Roles.Count - 3)</span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted text-sm">â€”</span>
                                }
                            </td>
                            <td>
                                <div class="d-flex gap-1">
                                    <a asp-action="Edit" asp-route-id="@user.Id" 
                                       class="btn btn-sm btn-ghost" 
                                       data-bs-toggle="tooltip" 
                                       title="Edit user">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="ModuleRestrictions" asp-route-id="@user.Id" 
                                       class="btn btn-sm btn-ghost" 
                                       data-bs-toggle="tooltip" 
                                       title="Module access restrictions">
                                        <i class="bi bi-shield-lock"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-people empty-state-icon"></i>
                <h5 class="empty-state-title">No users found</h5>
                <p class="empty-state-text">Get started by creating your first user account.</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus"></i> Add User
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            if ($('#usersTable tbody tr').length > 10) {
                $('#usersTable').DataTable({
                    pageLength: 25,
                    order: [[0, 'asc']],
                    language: {
                        search: "Search:",
                        lengthMenu: "Show _MENU_",
                        info: "_START_ - _END_ of _TOTAL_",
                        paginate: {
                            previous: '<i class="bi bi-chevron-left"></i>',
                            next: '<i class="bi bi-chevron-right"></i>'
                        }
                    }
                });
            }
        });
    </script>
}
