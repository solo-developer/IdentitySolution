@model IdentityService.Web.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div class="page-header">
    <div>
        <div class="breadcrumb">
            <a asp-action="Index">Users</a> / Create
        </div>
        <h1 class="page-title">Create User</h1>
        <p class="page-description">Add a new user account to the system</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">User Details</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
                    
                    <div class="form-group">
                        <label asp-for="FullName" class="form-label required">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                        <span asp-validation-for="FullName" class="text-danger text-xs"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="UserName" class="form-label required">Username</label>
                        <input asp-for="UserName" class="form-control" placeholder="johndoe" />
                        <span asp-validation-for="UserName" class="text-danger text-xs"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Email" class="form-label required">Email</label>
                        <input asp-for="Email" class="form-control" type="email" placeholder="john@example.com" />
                        <span asp-validation-for="Email" class="text-danger text-xs"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="Password" class="form-label required">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter password" />
                        <span asp-validation-for="Password" class="text-danger text-xs"></span>
                        <div class="form-text">Minimum 6 characters with mixed case, numbers, and special characters</div>
                    </div>
                    
                    <div class="d-flex justify-content-between pt-4 border-top mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Create User
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
