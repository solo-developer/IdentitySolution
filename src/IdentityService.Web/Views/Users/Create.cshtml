@model IdentityService.Web.ViewModels.CreateUserViewModel
@{
    ViewData["Title"] = "Create User";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Create User</h1>
        <p class="page-subtitle">Register a new user account</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center gap-3">
                    <div class="avatar avatar-lg avatar-primary">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <div>
                        <h5 class="mb-0 fw-semibold">User Details</h5>
                        <p class="text-muted text-sm mb-0">Fill in the information below</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="All" class="alert alert-soft-danger mb-4" role="alert"></div>
                    
                    <div class="row g-4">
                        <div class="col-md-6">
                            <label asp-for="FullName" class="form-label fw-medium">Full Name</label>
                            <input asp-for="FullName" class="form-control" placeholder="John Doe" />
                            <span asp-validation-for="FullName" class="text-danger text-sm"></span>
                        </div>
                        
                        <div class="col-md-6">
                            <label asp-for="UserName" class="form-label fw-medium">Username</label>
                            <input asp-for="UserName" class="form-control" placeholder="johndoe" />
                            <span asp-validation-for="UserName" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Email" class="form-label fw-medium">Email Address</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="john@example.com" />
                            <span asp-validation-for="Email" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Password" class="form-label fw-medium">Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter a strong password" />
                            <span asp-validation-for="Password" class="text-danger text-sm"></span>
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i>
                                Password must be at least 6 characters with mixed character types.
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-check-lg"></i> Create Account
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
