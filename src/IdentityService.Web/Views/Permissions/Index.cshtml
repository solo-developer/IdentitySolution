@model IdentityService.Web.ViewModels.PermissionListViewModel
@{
    ViewData["Title"] = "Permission Management";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Permissions</h1>
        <p class="page-subtitle">Configure granular access controls across modules</p>
    </div>
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPermissionModal">
        <i class="bi bi-plus-lg"></i> Add Permission
    </button>
</div>

<!-- Filters -->
<div class="card mb-5">
    <div class="card-body">
        <form method="get" asp-action="Index" class="row g-3 align-items-end">
            <div class="col-md-4">
                <label class="section-title">Module Filter</label>
                <select name="module" class="form-select" onchange="this.form.submit()">
                    <option value="">All Modules</option>
                    @foreach (var module in Model.AvailableModules)
                    {
                        <option value="@module" selected="@(module == Model.SelectedModule)">@module</option>
                    }
                </select>
            </div>
            <div class="col-md-4">
                <label class="section-title">Status Filter</label>
                <select name="status" class="form-select" onchange="this.form.submit()">
                    <option value="">Any Status</option>
                    <option value="active" selected="@(Model.StatusFilter == "active")">Active Only</option>
                    <option value="inactive" selected="@(Model.StatusFilter == "inactive")">Inactive Only</option>
                </select>
            </div>
            <div class="col-md-4 text-end">
                @if(!string.IsNullOrEmpty(Model.SelectedModule) || !string.IsNullOrEmpty(Model.StatusFilter)) 
                {
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-lg"></i> Clear Filters
                    </a>
                }
            </div>
        </form>
    </div>
</div>

<!-- Permissions Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Permissions.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover mb-0 datatable">
                    <thead>
                        <tr>
                            <th>Permission</th>
                            <th>Module</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permission in Model.Permissions)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <div class="avatar avatar-sm avatar-warning">
                                            <i class="bi bi-key"></i>
                                        </div>
                                        <div>
                                            <div class="fw-semibold">@permission.Name</div>
                                            <div class="text-muted text-sm text-truncate" style="max-width: 300px;">
                                                @permission.Description
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="badge badge-soft-primary">@permission.Module</span>
                                </td>
                                <td>
                                    <form method="post" asp-action="ToggleStatus" class="d-inline" id="toggle_@permission.Id">
                                        <input type="hidden" name="permissionId" value="@permission.Id" />
                                        <div class="form-check form-switch">
                                            <input class="form-check-input cursor-pointer" 
                                                   type="checkbox" 
                                                   role="switch" 
                                                   onchange="document.getElementById('toggle_@permission.Id').submit()"
                                                   @(permission.IsActive ? "checked" : "")>
                                            <label class="form-check-label text-sm text-muted">
                                                @(permission.IsActive ? "Active" : "Inactive")
                                            </label>
                                        </div>
                                    </form>
                                </td>
                                <td class="text-end">
                                    <button type="button" 
                                            class="btn btn-icon btn-light" 
                                            onclick="editPermission('@permission.Id', '@permission.Name.Replace("'", "\\'")', '@permission.Description.Replace("'", "\\'")', @permission.IsActive.ToString().ToLower())">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-shield-lock empty-state-icon"></i>
                <h5 class="empty-state-title">No Permissions Found</h5>
                <p class="empty-state-text">Try adjusting your filters or create a new permission.</p>
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createPermissionModal">
                    <i class="bi bi-plus-lg"></i> Create Permission
                </button>
            </div>
        }
    </div>
</div>

<!-- Create Permission Modal -->
<div class="modal fade" id="createPermissionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold">Create Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="Create">
                <div class="modal-body">
                    @* Binding to CreatePermissionInput properties *@
                    <div class="mb-4">
                        <label class="form-label fw-medium">Permission Name</label>
                        <input asp-for="CreatePermissionInput.Name" class="form-control" placeholder="e.g. CanApproveOrders" required />
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-medium">Module</label>
                        <select asp-for="CreatePermissionInput.Module" class="form-select" required>
                            <option value="">Select Module</option>
                            @foreach (var module in Model.AvailableModules)
                            {
                                <option value="@module">@module</option>
                            }
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="form-label fw-medium">Description</label>
                        <textarea asp-for="CreatePermissionInput.Description" class="form-control" rows="3" placeholder="Describe what this permission allows..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Permission</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Update Permission Modal -->
<div class="modal fade" id="updatePermissionModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-semibold">Update Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="Update">
                <input type="hidden" id="update_permissionId" name="permissionId" />
                <div class="modal-body">
                    <div class="mb-4">
                        <label class="form-label fw-medium">Permission Name</label>
                        <input id="update_name" name="Name" class="form-control" required />
                    </div>
                    @* Module should generally not be editable, logic might forbid it *@
                    <div class="mb-4">
                        <label class="form-label fw-medium">Description</label>
                        <textarea id="update_description" name="Description" class="form-control" rows="3"></textarea>
                    </div>
                     <div class="mb-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" role="switch" id="update_isActive" name="IsActive" value="true">
                            <label class="form-check-label" for="update_isActive">Active</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editPermission(id, name, description, isActive) {
            document.getElementById('update_permissionId').value = id;
            document.getElementById('update_name').value = name;
            document.getElementById('update_description').value = description;
            document.getElementById('update_isActive').checked = isActive;
            
            var modal = new bootstrap.Modal(document.getElementById('updatePermissionModal'));
            modal.show();
        }
    </script>
}
