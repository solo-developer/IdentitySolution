@model IdentityService.Web.ViewModels.PermissionListViewModel
@{
    ViewData["Title"] = "Permissions";
    
    // Flatten permissions for the parent dropdown
    var flattenedPermissions = new List<IdentityService.Web.ViewModels.PermissionViewModel>();
    void Flatten(IEnumerable<IdentityService.Web.ViewModels.PermissionViewModel> permissions)
    {
        foreach (var p in permissions)
        {
            flattenedPermissions.Add(p);
            Flatten(p.Children);
        }
    }
    Flatten(Model.Permissions);
}

<style>
    /* Tree View Styles */
    .permission-tree {
        user-select: none;
    }
    .tree-node {
        margin-left: 20px;
        position: relative;
    }
    .tree-node:before {
        content: "";
        position: absolute;
        top: -10px;
        left: -15px;
        border-left: 1px solid #dee2e6;
        border-bottom: 1px solid #dee2e6;
        width: 15px;
        height: 25px;
    }
    .tree-node:after {
        content: "";
        position: absolute;
        top: 15px;
        left: -15px;
        border-left: 1px solid #dee2e6;
        height: 100%;
    }
    .tree-node:last-child:after {
        display: none;
    }
    .node-content {
        display: flex;
        align-items: center;
        padding: 8px 12px;
        border-radius: 6px;
        transition: all 0.2s;
        cursor: pointer;
        margin-bottom: 4px;
        background: white;
        border: 1px solid transparent;
    }
    .node-content:hover {
        background: #f8f9fa;
        border-color: #e9ecef;
        transform: translateX(4px);
    }
    .node-icon {
        font-size: 1.1rem;
        margin-right: 10px;
        color: #6c757d;
    }
    .node-details {
        display: flex;
        flex-direction: column;
    }
    .node-name {
        font-weight: 500;
        font-family: var(--bs-font-monospace);
        font-size: 0.9rem;
    }
    .node-desc {
        font-size: 0.75rem;
        color: #adb5bd;
    }
    .node-inactive .node-content {
        opacity: 0.6;
        background: #f1f3f5;
    }
    
    /* Context Menu */
    .context-menu {
        position: fixed;
        background: white;
        border-radius: 8px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        padding: 6px;
        min-width: 180px;
        z-index: 10000;
        display: none;
        border: 1px solid #e9ecef;
    }
    .context-menu-item {
        padding: 8px 12px;
        border-radius: 5px;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 0.85rem;
        transition: background 0.2s;
    }
    .context-menu-item:hover {
        background: #f1f3f5;
    }
    .context-menu-divider {
        height: 1px;
        background: #e9ecef;
        margin: 4px 6px;
    }
</style>

@functions {
    public async Task RenderPermissionRow(IdentityService.Web.ViewModels.PermissionViewModel permission, int level = 0)
    {
        <tr class="@(!permission.IsActive ? "opacity-50" : "")">
            <td class="text-center">
                <form method="post" asp-action="ToggleStatus" class="d-inline" id="toggle_@permission.Id">
                    <input type="hidden" name="permissionId" value="@permission.Id" />
                    <input type="hidden" name="module" value="@Model.SelectedModule" />
                    <div class="form-switch">
                        <input class="form-check-input" 
                               type="checkbox" 
                               onchange="document.getElementById('toggle_@permission.Id').submit()"
                               @(permission.IsActive ? "checked" : "")>
                    </div>
                </form>
            </td>
            <td>
                <div style="padding-left: @(level * 25)px;" class="d-flex align-items-center">
                    @if (level > 0)
                    {
                        <i class="bi bi-arrow-return-right text-muted me-2 small"></i>
                    }
                    <code>@permission.Name</code>
                </div>
            </td>
            <td class="text-muted text-sm">
                @(string.IsNullOrEmpty(permission.Description) ? "â€”" : permission.Description)
            </td>
            <td>
                <div class="d-flex gap-1">
                    <button type="button" 
                            class="btn btn-sm btn-ghost"
                            onclick="editPermission('@permission.Id', '@permission.Name.Replace("'", "\\'")', '@(permission.Description?.Replace("'", "\\'").Replace("\n", " ").Replace("\r", "") ?? "")', '@permission.ParentId', @permission.IsActive.ToString().ToLower())"
                            data-bs-toggle="tooltip" 
                            title="Edit">
                        <i class="bi bi-pencil"></i>
                    </button>
                    <button type="button" 
                            class="btn btn-sm btn-ghost text-primary"
                            onclick="createSubPermission('@permission.Id')"
                            data-bs-toggle="tooltip" 
                            title="Add Sub-permission">
                        <i class="bi bi-plus-circle"></i>
                    </button>
                </div>
            </td>
        </tr>
        @foreach (var child in permission.Children)
        {
            await RenderPermissionRow(child, level + 1);
        }
    }
}

<div class="page-header">
    <div>
        <h1 class="page-title">Permissions</h1>
        <p class="page-description">Configure granular access controls for each module</p>
    </div>
    @if (!string.IsNullOrEmpty(Model.SelectedModule))
    {
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
            <i class="bi bi-plus"></i> Add Permission
        </button>
    }
</div>

<!-- Module Selector -->
<div class="card mb-4">
    <div class="card-body py-3">
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted text-sm">Module:</span>
            <form method="get" asp-action="Index" id="moduleForm" class="d-flex align-items-center gap-2">
                <select name="module" class="form-select form-control-sm" style="width: 200px;" onchange="this.form.submit()">
                    <option value="">Select a module</option>
                    @foreach (var module in Model.AvailableModules)
                    {
                        <option value="@module" selected="@(module == Model.SelectedModule)">@module</option>
                    }
                </select>
            </form>
            
        @if (!string.IsNullOrEmpty(Model.SelectedModule))
        {
            <div class="d-flex gap-2 ms-4">
                <a asp-action="Index" asp-route-module="@Model.SelectedModule" 
                   class="btn btn-sm @(string.IsNullOrEmpty(Model.StatusFilter) ? "btn-primary" : "btn-secondary")">
                    All
                </a>
                <a asp-action="Index" asp-route-module="@Model.SelectedModule" asp-route-status="active"
                   class="btn btn-sm @(Model.StatusFilter == "active" ? "btn-primary" : "btn-secondary")">
                    Active
                </a>
                <a asp-action="Index" asp-route-module="@Model.SelectedModule" asp-route-status="inactive"
                   class="btn btn-sm @(Model.StatusFilter == "inactive" ? "btn-primary" : "btn-secondary")">
                    Inactive
                </a>
            </div>
            
            <div class="ms-auto d-flex align-items-center gap-3">
                <div class="btn-group btn-group-sm" role="group">
                    <button type="button" class="btn btn-outline-secondary active" id="btnTableView" onclick="setView('table')">
                        <i class="bi bi-table me-1"></i> Table
                    </button>
                    <button type="button" class="btn btn-outline-secondary" id="btnTreeView" onclick="setView('tree')">
                        <i class="bi bi-diagram-3 me-1"></i> Tree
                    </button>
                </div>
                <span class="text-muted text-sm">
                    <strong>@flattenedPermissions.Count</strong> permissions
                </span>
            </div>
        }
    </div>
</div>

@if (string.IsNullOrEmpty(Model.SelectedModule))
{
    <div class="card">
        <div class="empty-state">
            <i class="bi bi-box-seam empty-state-icon"></i>
            <h5 class="empty-state-title">Select a Module</h5>
            <p class="empty-state-text">Choose a module from the dropdown above to view and manage its permissions.</p>
        </div>
    </div>
}
else
{
    <!-- Table View -->
    <div id="tableView" class="card">
        <div class="card-body p-0">
            @if (Model.Permissions.Any())
            {
                <table class="table mb-0" id="permissionsTable">
                    <thead>
                        <tr>
                            <th style="width: 40px;"></th>
                            <th>Permission Name</th>
                            <th>Description</th>
                            <th style="width: 100px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var permission in Model.Permissions)
                        {
                            await RenderPermissionRow(permission);
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-key empty-state-icon"></i>
                    <h5 class="empty-state-title">No permissions found</h5>
                    <p class="empty-state-text">
                        @if (!string.IsNullOrEmpty(Model.StatusFilter))
                        {
                            <text>No @Model.StatusFilter permissions. Try changing the filter.</text>
                        }
                        else
                        {
                            <text>Create the first permission for @Model.SelectedModule module.</text>
                        }
                    </p>
                    @if (string.IsNullOrEmpty(Model.StatusFilter))
                    {
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createModal">
                            <i class="bi bi-plus"></i> Add Permission
                        </button>
                    }
                </div>
            }
        </div>
    </div>

    <!-- Tree View -->
    <div id="treeView" class="card d-none">
        <div class="card-body p-4">
            @if (Model.Permissions.Any())
            {
                <div class="permission-tree">
                    @{
                        async Task RenderTreeNode(IdentityService.Web.ViewModels.PermissionViewModel node)
                        {
                            <div class="tree-node @(!node.IsActive ? "node-inactive" : "")" 
                                 data-id="@node.Id" 
                                 data-name="@node.Name"
                                 data-description="@node.Description"
                                 data-parentid="@node.ParentId"
                                 data-isactive="@node.IsActive.ToString().ToLower()"
                                 oncontextmenu="showContextMenu(event, this)">
                                <div class="node-content">
                                    <i class="bi @(node.Children.Any() ? "bi-folder2-open" : "bi-file-earmark-lock2") node-icon"></i>
                                    <div class="node-details">
                                        <span class="node-name">@node.Name</span>
                                        @if (!string.IsNullOrEmpty(node.Description))
                                        {
                                            <span class="node-desc">@node.Description</span>
                                        }
                                    </div>
                                    @if (!node.IsActive)
                                    {
                                        <span class="badge badge-soft-danger ms-2">Inactive</span>
                                    }
                                </div>
                                @if (node.Children.Any())
                                {
                                    <div class="node-children">
                                        @foreach (var child in node.Children)
                                        {
                                            await RenderTreeNode(child);
                                        }
                                    </div>
                                }
                            </div>
                        }

                        foreach (var root in Model.Permissions)
                        {
                            await RenderTreeNode(root);
                        }
                    }
                </div>
            }
            else
            {
                 <div class="empty-state">
                    <i class="bi bi-diagram-3 empty-state-icon"></i>
                    <h5 class="empty-state-title">No permissions to display</h5>
                </div>
            }
        </div>
    </div>
}

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="Create">
                <input type="hidden" name="CreatePermissionInput.Module" value="@Model.SelectedModule" />
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label">Parent Permission (Optional)</label>
                        <select name="CreatePermissionInput.ParentId" id="create_parentId" class="form-select">
                            <option value="">-- No Parent (Root) --</option>
                            @foreach (var p in flattenedPermissions)
                            {
                                <option value="@p.Id">@p.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label required">Permission Name</label>
                        <input name="CreatePermissionInput.Name" class="form-control" placeholder="e.g. CanApproveOrders" required />
                        <div class="form-text">Use descriptive names like CanRead, CanWrite, CanDelete</div>
                    </div>
                    <div class="form-group mb-0">
                        <label class="form-label">Description</label>
                        <textarea name="CreatePermissionInput.Description" class="form-control" rows="2" placeholder="Optional description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Permission</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="Update">
                <input type="hidden" id="edit_id" name="permissionId" />
                <input type="hidden" name="Module" value="@Model.SelectedModule" />
                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label class="form-label">Parent Permission (Optional)</label>
                        <select id="edit_parentId" name="ParentId" class="form-select">
                            <option value="">-- No Parent (Root) --</option>
                            @foreach (var p in flattenedPermissions)
                            {
                                <option value="@p.Id">@p.Name</option>
                            }
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label required">Permission Name</label>
                        <input id="edit_name" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label class="form-label">Description</label>
                        <textarea id="edit_description" name="Description" class="form-control" rows="2"></textarea>
                    </div>
                    <div class="form-group mb-0">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="edit_isActive" name="IsActive" value="true">
                            <label class="form-check-label" for="edit_isActive">Active</label>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Context Menu -->
<div id="treeContextMenu" class="context-menu">
    <div class="context-menu-item" onclick="handleContextMenuAction('add-sub')">
        <i class="bi bi-plus-circle text-primary"></i> Add Sub-permission
    </div>
    <div class="context-menu-item" onclick="handleContextMenuAction('edit')">
        <i class="bi bi-pencil"></i> Edit Permission
    </div>
    <div class="context-menu-divider"></div>
    <div class="context-menu-item text-danger" onclick="handleContextMenuAction('toggle')">
        <i class="bi bi-power"></i> Toggle Status
    </div>
</div>

@section Scripts {
    <script>
        let currentContextMenuNode = null;

        function setView(view) {
            if (view === 'table') {
                $('#tableView').removeClass('d-none');
                $('#treeView').addClass('d-none');
                $('#btnTableView').addClass('active');
                $('#btnTreeView').removeClass('active');
            } else {
                $('#tableView').addClass('d-none');
                $('#treeView').removeClass('d-none');
                $('#btnTableView').removeClass('active');
                $('#btnTreeView').addClass('active');
            }
            localStorage.setItem('permissionViewMode', view);
        }

        function showContextMenu(e, el) {
            e.preventDefault();
            const node = $(el);
            currentContextMenuNode = {
                id: node.data('id'),
                name: node.data('name'),
                description: node.data('description'),
                parentId: node.data('parentid'),
                isActive: node.data('isactive')
            };
            
            const menu = document.getElementById('treeContextMenu');
            menu.style.display = 'block';
            menu.style.left = e.pageX + 'px';
            menu.style.top = e.pageY + 'px';
            
            // Close menu on click outside
            document.addEventListener('click', hideContextMenu);
        }

        function hideContextMenu() {
            document.getElementById('treeContextMenu').style.display = 'none';
            document.removeEventListener('click', hideContextMenu);
        }

        function handleContextMenuAction(action) {
            if (!currentContextMenuNode) return;
            
            if (action === 'add-sub') {
                createSubPermission(currentContextMenuNode.id);
            } else if (action === 'edit') {
                editPermission(
                    currentContextMenuNode.id, 
                    currentContextMenuNode.name, 
                    currentContextMenuNode.description, 
                    currentContextMenuNode.parentId, 
                    currentContextMenuNode.isActive
                );
            } else if (action === 'toggle') {
                document.getElementById('toggle_' + currentContextMenuNode.id).submit();
            }
            
            hideContextMenu();
        }

        function editPermission(id, name, description, parentId, isActive) {
            document.getElementById('edit_id').value = id;
            document.getElementById('edit_name').value = name;
            document.getElementById('edit_description').value = description;
            document.getElementById('edit_isActive').checked = isActive;
            document.getElementById('edit_parentId').value = parentId || "";
            
            var modal = new bootstrap.Modal(document.getElementById('editModal'));
            modal.show();
        }

        function createSubPermission(parentId) {
            document.getElementById('create_parentId').value = parentId;
            var modal = new bootstrap.Modal(document.getElementById('createModal'));
            modal.show();
        }
        
        $(document).ready(function() {
            // Restore view mode
            const savedView = localStorage.getItem('permissionViewMode') || 'table';
            setView(savedView);

            // Initialize tooltips
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
            
            if ($('#permissionsTable tbody tr').length > 50) {
                 $('#permissionsTable').DataTable({
                    paging: false,
                    searching: true,
                    info: false,
                    ordering: false
                });
            }
        });
    </script>
}
