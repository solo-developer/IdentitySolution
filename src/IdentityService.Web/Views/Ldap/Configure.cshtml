@model IdentityService.Web.ViewModels.LdapConfigurationViewModel
@{
    ViewData["Title"] = "Configure LDAP";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Configure LDAP</h1>
        <p class="page-subtitle">Setup connection to Active Directory</p>
    </div>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to Sync
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-soft-danger mb-4" role="alert"></div>
                    
                    <div class="row g-4">
                        <div class="col-md-8">
                            <label asp-for="Host" class="form-label fw-medium">LDAP Host</label>
                            <input asp-for="Host" class="form-control" placeholder="ldap.example.com" />
                            <span asp-validation-for="Host" class="text-danger text-sm"></span>
                        </div>
                        
                        <div class="col-md-4">
                            <label asp-for="Port" class="form-label fw-medium">Port</label>
                            <input asp-for="Port" class="form-control" placeholder="389" />
                            <span asp-validation-for="Port" class="text-danger text-sm"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="BaseDn" class="form-label fw-medium">Base DN</label>
                            <input asp-for="BaseDn" class="form-control" placeholder="DC=example,DC=com" />
                            <span asp-validation-for="BaseDn" class="text-danger text-sm"></span>
                            <div class="form-text">The root node to search for users.</div>
                        </div>

                        <div class="col-12">
                            <label asp-for="AdminDn" class="form-label fw-medium">Admin DN / Service Account</label>
                            <input asp-for="AdminDn" class="form-control" placeholder="CN=ServiceAccount,CN=Users,DC=example,DC=com" />
                            <span asp-validation-for="AdminDn" class="text-danger text-sm"></span>
                            <div class="form-text">Distinguished Name of the account used to query LDAP.</div>
                        </div>

                        <div class="col-12">
                            <label asp-for="AdminPassword" class="form-label fw-medium">Password</label>
                            <input asp-for="AdminPassword" class="form-control" type="password" value="@Model.AdminPassword" />
                            <span asp-validation-for="AdminPassword" class="text-danger text-sm"></span>
                        </div>
                        
                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" asp-for="UseSsl">
                                <label class="form-check-label" asp-for="UseSsl">Use SSL (LDAPS)</label>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" role="switch" asp-for="IsEnabled">
                                <label class="form-check-label" asp-for="IsEnabled">Enable Integration</label>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-save"></i> Save Configuration
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
