@model IdentityService.Web.ViewModels.LdapConfigurationViewModel
@{
    ViewData["Title"] = "LDAP Configuration";
}

<div class="page-header">
    <div>
        <div class="breadcrumb">
            <a asp-action="Index">LDAP Sync</a> / Configure
        </div>
        <h1 class="page-title">LDAP Configuration</h1>
        <p class="page-description">Configure Active Directory connection settings</p>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Connection Settings</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>
                    
                    <div class="row g-3">
                        <div class="col-md-8">
                            <div class="form-group mb-0">
                                <label asp-for="Host" class="form-label required">LDAP Host</label>
                                <input asp-for="Host" class="form-control" placeholder="ldap.example.com" />
                                <span asp-validation-for="Host" class="text-danger text-xs"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group mb-0">
                                <label asp-for="Port" class="form-label required">Port</label>
                                <input asp-for="Port" class="form-control" placeholder="389" />
                                <span asp-validation-for="Port" class="text-danger text-xs"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mt-3">
                        <label asp-for="BaseDn" class="form-label required">Base DN</label>
                        <input asp-for="BaseDn" class="form-control" placeholder="DC=example,DC=com" />
                        <span asp-validation-for="BaseDn" class="text-danger text-xs"></span>
                        <div class="form-text">Root node for user search</div>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="form-group">
                        <label asp-for="AdminDn" class="form-label required">Admin DN</label>
                        <input asp-for="AdminDn" class="form-control" placeholder="CN=ServiceAccount,CN=Users,DC=example,DC=com" />
                        <span asp-validation-for="AdminDn" class="text-danger text-xs"></span>
                        <div class="form-text">Distinguished name of the service account</div>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="AdminPassword" class="form-label required">Password</label>
                        <input asp-for="AdminPassword" class="form-control" type="password" value="@Model.AdminPassword" />
                        <span asp-validation-for="AdminPassword" class="text-danger text-xs"></span>
                    </div>
                    
                    <hr class="my-4" />
                    
                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="UseSsl">
                            <label class="form-check-label" asp-for="UseSsl">Use SSL (LDAPS)</label>
                        </div>
                        <div class="form-text">Enable for secure connection on port 636</div>
                    </div>
                    
                    <div class="form-group mb-0">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsEnabled">
                            <label class="form-check-label" asp-for="IsEnabled">Enable LDAP Integration</label>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between pt-4 border-top mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check"></i> Save Configuration
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
