@model IdentityService.Web.ViewModels.RoleIndexViewModel
@{
    ViewData["Title"] = "Roles";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Roles</h1>
        <p class="page-description">Manage roles and their module assignments</p>
    </div>
    @if (!string.IsNullOrEmpty(Model.Module))
    {
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoleModal">
            <i class="bi bi-plus"></i> Add Role
        </button>
    }
</div>

<!-- Module Selector -->
<div class="card mb-4">
    <div class="card-body py-3">
        <div class="d-flex align-items-center gap-3">
            <span class="text-muted text-sm">Module:</span>
            <form method="get" asp-action="Index" id="moduleForm">
                <select name="module" class="form-select form-control-sm" style="width: 200px;" onchange="this.form.submit()" @(Model.IsModuleReadOnly ? "disabled" : "")>
                    <option value="">Select a module</option>
                    @foreach (var module in Model.Modules)
                    {
                        <option value="@module" selected="@(module == Model.Module)">@module</option>
                    }
                </select>
            </form>
            @if (!string.IsNullOrEmpty(Model.Module))
            {
                <span class="text-muted text-sm ms-auto">
                    <strong>@Model.Roles.Count</strong> roles in <strong>@Model.Module</strong>
                </span>
            }
        </div>
    </div>
</div>

@if (string.IsNullOrEmpty(Model.Module))
{
    <div class="card">
        <div class="empty-state">
            <i class="bi bi-hdd-stack empty-state-icon"></i>
            <h5 class="empty-state-title">Select a Module</h5>
            <p class="empty-state-text">Choose a module from the dropdown above to view and manage its roles.</p>
        </div>
    </div>
}
else
{
    <!-- Roles Table -->
    <div class="card">
        <div class="card-body p-0">
            @if (Model.Roles.Any())
            {
                <table class="table mb-0" id="rolesTable">
                    <thead>
                        <tr>
                            <th>Role Name</th>
                            <th>Description</th>
                            <th>Permissions</th>
                            <th style="width: 80px;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model.Roles)
                        {
                            <tr>
                                <td>
                                    <span class="font-medium">@role.Name</span>
                                </td>
                                <td class="text-muted text-sm">
                                    @(string.IsNullOrEmpty(role.Description) ? "â€”" : role.Description)
                                </td>
                                <td>
                                    <a asp-controller="RolePermission" asp-action="Index" asp-route-roleId="@role.Id" 
                                       class="text-primary text-sm">
                                        @role.Permissions.Count permissions
                                    </a>
                                </td>
                                <td>
                                    <button type="button" 
                                            class="btn btn-sm btn-ghost"
                                            onclick="editRole('@role.Id', '@role.Name.Replace("'", "\\'")', '@(role.Description?.Replace("'", "\\'") ?? "")')"
                                            data-bs-toggle="tooltip" 
                                            title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-person-badge empty-state-icon"></i>
                    <h5 class="empty-state-title">No roles found</h5>
                    <p class="empty-state-text">Create your first role for the @Model.Module module.</p>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createRoleModal">
                        <i class="bi bi-plus"></i> Create Role
                    </button>
                </div>
            }
        </div>
    </div>
}

<!-- Create Role Modal -->
<div class="modal fade" id="createRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="Create">
                <input type="hidden" name="Module" value="@Model.Module" />
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Module</label>
                        <input class="form-control" value="@Model.Module" readonly disabled />
                    </div>
                    <div class="form-group">
                        <label class="form-label required">Role Name</label>
                        <input name="Name" class="form-control" placeholder="e.g. Manager" required />
                    </div>
                    <div class="form-group mb-0">
                        <label class="form-label">Description</label>
                        <textarea name="Description" class="form-control" rows="2" placeholder="Optional description"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Create Role</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Edit Role Modal -->
<div class="modal fade" id="editRoleModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Role</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="Update">
                <input type="hidden" id="edit_roleId" name="roleId" />
                <input type="hidden" name="module" value="@Model.Module" />
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Module</label>
                        <input class="form-control" value="@Model.Module" readonly disabled />
                    </div>
                    <div class="form-group">
                        <label class="form-label required">Role Name</label>
                        <input id="edit_name" name="Name" class="form-control" required />
                    </div>
                    <div class="form-group mb-0">
                        <label class="form-label">Description</label>
                        <textarea id="edit_description" name="Description" class="form-control" rows="2"></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function editRole(id, name, description) {
            document.getElementById('edit_roleId').value = id;
            document.getElementById('edit_name').value = name;
            document.getElementById('edit_description').value = description;
            
            var modal = new bootstrap.Modal(document.getElementById('editRoleModal'));
            modal.show();
        }
    </script>
}
