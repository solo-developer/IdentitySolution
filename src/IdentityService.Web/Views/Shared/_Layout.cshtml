<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Identity Admin</title>
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <!-- DataTables -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="admin-wrapper">
        <!-- Sidebar -->
        <aside class="sidebar">
            <div class="sidebar-brand">
                <div class="sidebar-brand-icon">
                    <i class="bi bi-shield-lock"></i>
                </div>
                <span class="sidebar-brand-text">Identity Admin</span>
            </div>
            
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">Overview</div>
                    <a asp-controller="Home" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                        <i class="bi bi-grid"></i>
                        Dashboard
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">Access Management</div>
                    <a asp-controller="Users" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
                        <i class="bi bi-people"></i>
                        Users
                    </a>
                    <a asp-controller="Roles" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Roles" ? "active" : "")">
                        <i class="bi bi-person-badge"></i>
                        Roles
                    </a>
                    <a asp-controller="Permissions" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Permissions" ? "active" : "")">
                        <i class="bi bi-key"></i>
                        Permissions
                    </a>
                    <a asp-controller="RolePermission" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "RolePermission" ? "active" : "")">
                        <i class="bi bi-diagram-3"></i>
                        Role Mapping
                    </a>
                </div>
                
                <div class="nav-section">
                    <div class="nav-section-title">System</div>
                    <a asp-controller="Modules" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Modules" ? "active" : "")">
                        <i class="bi bi-hdd-network"></i>
                        Modules
                    </a>
                    <a asp-controller="Ldap" asp-action="Index" 
                       class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "Ldap" ? "active" : "")">
                        <i class="bi bi-diagram-2"></i>
                        LDAP Sync
                    </a>
                </div>
            </nav>
            
            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        @{
                            var userName = User.Identity?.Name ?? "Admin";
                            var initials = userName.Length >= 2 ? userName.Substring(0, 2).ToUpper() : userName.ToUpper();
                        }
                        @initials
                    </div>
                    <div style="flex: 1; min-width: 0;">
                        <div class="truncate" style="color: white; font-weight: 500;">@userName</div>
                        <div class="text-xs">Administrator</div>
                    </div>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <button type="submit" class="btn-ghost" style="color: var(--gray-400); padding: 4px; border: none; background: none; cursor: pointer;" title="Sign out">
                            <i class="bi bi-box-arrow-right"></i>
                        </button>
                    </form>
                </div>
            </div>
        </aside>
        
        <!-- Main Content -->
        <main class="main-content">
            <div class="content-body">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- Toast Container -->
    <div class="toast-container" id="toastContainer"></div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    
    <script>
        // Toast notification function
        function showToast(message, type = 'success') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            toast.innerHTML = `
                <i class="bi bi-${type === 'success' ? 'check-circle' : 'exclamation-circle'}"></i>
                <span>${message}</span>
            `;
            container.appendChild(toast);
            
            setTimeout(() => {
                toast.style.opacity = '0';
                setTimeout(() => toast.remove(), 300);
            }, 4000);
        }
        
        // Display flash messages
        @if (TempData["SuccessMessage"] != null)
        {
            <text>showToast('@TempData["SuccessMessage"]', 'success');</text>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <text>showToast('@TempData["ErrorMessage"]', 'error');</text>
        }
        
        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            tooltipTriggerList.map(function (el) {
                return new bootstrap.Tooltip(el);
            });
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
