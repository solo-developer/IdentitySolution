@model IdentityService.Web.ViewModels.ModulesViewModel
@{
    ViewData["Title"] = "Modules";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Modules</h1>
        <p class="page-description">Registered microservices and their status</p>
    </div>
</div>

<!-- Stats -->
<div class="stat-grid" style="grid-template-columns: repeat(4, 1fr);">
    <div class="stat-card">
        <div class="stat-label">Total Modules</div>
        <div class="stat-value">@Model.Services.Count</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Healthy</div>
        <div class="stat-value" style="color: var(--success);">@Model.HealthyCount</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Warning</div>
        <div class="stat-value" style="color: var(--warning);">@Model.WarningCount</div>
    </div>
    <div class="stat-card">
        <div class="stat-label">Critical</div>
        <div class="stat-value" style="color: var(--danger);">@Model.CriticalCount</div>
    </div>
</div>

<!-- Modules Table -->
<div class="card">
    <div class="card-body p-0">
        @if (Model.Services.Any())
        {
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Module</th>
                        <th>Service ID</th>
                        <th>Address</th>
                        <th>Status</th>
                        <th style="width: 100px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var service in Model.Services)
                    {
                        var isHealthy = service.Status == "passing" || service.Status == "healthy";
                        var isWarning = service.Status == "warning";
                        <tr>
                            <td>
                                <span class="font-medium">@service.Name</span>
                                @if (!string.IsNullOrEmpty(service.Module))
                                {
                                    <span class="badge badge-gray ms-2">@service.Module</span>
                                }
                            </td>
                            <td>
                                <code class="text-xs">@service.Id</code>
                            </td>
                            <td class="text-muted text-sm">
                                @if (!string.IsNullOrEmpty(service.Address))
                                {
                                    <span>@service.Address:@service.Port</span>
                                }
                                else
                                {
                                    <span>â€”</span>
                                }
                            </td>
                            <td>
                                @if (isHealthy)
                                {
                                    <span class="status-dot active">Healthy</span>
                                }
                                else if (isWarning)
                                {
                                    <span class="status-dot warning">Warning</span>
                                }
                                else
                                {
                                    <span class="status-dot critical">Critical</span>
                                }
                            </td>
                            <td>
                                @if (isHealthy && !string.IsNullOrEmpty(service.Address))
                                {
                                    <a href="http://@service.Address:@service.Port" target="_blank" class="btn btn-sm btn-ghost" data-bs-toggle="tooltip" title="Open">
                                        <i class="bi bi-box-arrow-up-right"></i>
                                    </a>
                                }
                                <a asp-controller="Roles" asp-action="Index" asp-route-module="@service.Name" 
                                   class="btn btn-sm btn-ghost" data-bs-toggle="tooltip" title="Roles">
                                    <i class="bi bi-person-badge"></i>
                                </a>
                                <a asp-controller="Permissions" asp-action="Index" asp-route-module="@service.Name" 
                                   class="btn btn-sm btn-ghost" data-bs-toggle="tooltip" title="Permissions">
                                    <i class="bi bi-key"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="empty-state">
                <i class="bi bi-hdd-network empty-state-icon"></i>
                <h5 class="empty-state-title">No modules registered</h5>
                <p class="empty-state-text">Modules will appear here once they register with Consul.</p>
            </div>
        }
    </div>
</div>

<!-- Info -->
<div class="card mt-4">
    <div class="card-body">
        <div class="d-flex align-items-start gap-3">
            <i class="bi bi-info-circle text-muted"></i>
            <div class="text-sm text-muted">
                <strong>Service Discovery:</strong> Modules register automatically via Consul. 
                Health status is checked in real-time. 
                Roles and permissions can still be managed for services regardless of their current health status.
            </div>
        </div>
    </div>
</div>
